# データベース設定
DATABASE_URL=postgres://user:pass@localhost:5432/advalay

# AWS設定
AWS_REGION=ap-northeast-1
S3_BUCKET=advalay-video-uploads
SES_SENDER=noreply@your-domain.jp

# Google OAuth設定（必須）
# Google Cloud ConsoleでOAuth 2.0クライアントIDを作成し、以下を設定してください
GOOGLE_CLIENT_ID=YOUR_OAUTH_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_OAUTH_CLIENT_SECRET
GOOGLE_REDIRECT_URI=http://localhost:4000/api/v1/channels/oauth/callback

# トークン暗号化設定（必須）
# 32バイト（64文字）の16進数文字列を生成して設定してください
# 生成方法: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
TOKEN_ENCRYPTION_KEY=your-64-character-hex-encryption-key-change-this-in-production

# Redis設定
REDIS_URL=redis://localhost:6379

# KMS設定（オプション）
KMS_KEY_ID=arn:aws:kms:ap-northeast-1:123456789012:key/12345678-1234-1234-1234-123456789012

# JWT認証設定
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# ログ設定
LOG_LEVEL=info
NODE_ENV=development

# アプリケーション設定
APP_VERSION=1.0.0

# セキュリティ設定
ALLOWED_ORIGIN=https://your-domain.com

# Google OAuth設定手順:
# 1. Google Cloud Console (https://console.cloud.google.com/) にアクセス
# 2. プロジェクトを作成または選択
# 3. 「APIとサービス」→「ライブラリ」でYouTube Data API v3を有効化
# 4. 「APIとサービス」→「認証情報」に移動
# 5. 「認証情報を作成」→「OAuth 2.0クライアントID」を選択
# 6. アプリケーションの種類: 「ウェブアプリケーション」
# 7. 承認済みのリダイレクトURI: http://localhost:4000/api/v1/channels/oauth/callback
# 8. 作成されたクライアントIDとクライアントシークレットを上記に設定
# 9. トークン暗号化キーを生成: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

