{
  "name": "video-nfc-infrastructure",
  "version": "1.0.0",
  "description": "NFCタグ付きキーホルダー向け動画配信システムのAWSインフラ",
  "bin": {
    "video-nfc-infrastructure": "bin/app.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "deploy": "cdk deploy --all",
    "deploy:dev": "ENV=dev cdk deploy --all",
    "deploy:prod": "ENV=prod cdk deploy --all --require-approval never",
    "destroy": "cdk destroy --all",
    "synth": "cdk synth",
    "diff": "cdk diff",
    "mcp:setup": "./scripts/setup-mcp.sh",
    "mcp:install": "cd mcp-servers/aws-integration && npm install && cd ../dynamodb-manager && npm install && cd ../dev-tools && npm install && cd ../monitoring && npm install",
    "mcp:test:aws": "node mcp-servers/aws-integration/index.js",
    "mcp:test:db": "node mcp-servers/dynamodb-manager/index.js",
    "mcp:test:dev": "node mcp-servers/dev-tools/index.js",
    "mcp:test:monitor": "node mcp-servers/monitoring/index.js",
    "mcp:update": "npm update && npm run mcp:install"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.129",
    "@types/node": "^20.19.23",
    "aws-cdk": "^2.110.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "^3.637.0",
    "@aws-sdk/client-cloudwatch-logs": "^3.637.0",
    "@aws-sdk/client-dynamodb": "^3.637.0",
    "@aws-sdk/client-lambda": "^3.637.0",
    "@aws-sdk/client-s3": "^3.637.0",
    "@aws-sdk/lib-dynamodb": "^3.637.0",
    "@aws-sdk/s3-request-presigner": "^3.637.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "aws-cdk-lib": "^2.110.0",
    "constructs": "^10.3.0",
    "dotenv": "^16.3.1"
  }
}
